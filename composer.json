{
  "name": "lbanas/sockets_server",
  "description": "web sockets php server",
  "minimum-stability": "stable",
  "license": "proprietary",
  "require": {
    "php": ">=7.4",
    "cboden/ratchet": "^0.4.2",
    "phan/phan": "^2.7"
  },
  "scripts": {
    "test": "phpunit",
    "lint": "phpcs SocketsServer --ignore=*/Tests/* --standard=PSR2"
  },
  "bin": ["bin/server"],
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "phpunit/phpunit": "^9.0",
    "squizlabs/php_codesniffer": "3.*",
    "phpmd/phpmd" : "@stable"
  },
  "autoload": {
    "psr-4": {
      "SocketsServer\\": "SocketsServer"
    }
  }
}
